<script>
    $(document).ready(function () {
        var numero = "@ViewBag.Numero";
        if (numero == "uno" || numero == "tre") {
            $("#chiudi_" + numero).css("left", "10px");
            $("#flipFrutto_" + numero).css("margin-left", "1vh");
        } else {
            $("#chiudi_" + numero).css("right", "10px");
            $("#flipFrutto_" + numero).css("margin-right", "1vh");
        }
        $("#scheda" + numero).show("bounce", 1500);
    });
</script>

<style>
    .flipFrutto {
        -webkit-perspective: initial;
        perspective: initial;
        position: relative;
        text-align: center;
        margin-top: 2.5vh;
    }

        .is-flipped {
            -webkit-transform: rotateY(-180deg);
            transform: rotateY(180deg);
        }


        .flipFrutto .card {
            width: 29vh;
            height: 35vh;
            -webkit-transform-style: preserve-3d;
            -webkit-transition: 0.5s;
            transform-style: preserve-3d;
            transition: 0.5s;
            background-color: #fff;
            border-radius: 0.5vh;
            border: 3px solid purple;
        }

            .flipFrutto .card .face {
                -webkit-backface-visibility: hidden;
                backface-visibility: hidden;
                z-index: 2;
            }

            .flipFrutto .card .front {
                position: absolute;
                width: 100%;
                z-index: 1;
            }

                .flipFrutto .card .front img {
                    width: 29vh;
                    height: 100%;
                }

            .flipFrutto .card .img {
                position: relative;
                width: 29vh;
                height: 35vh;
                z-index: 1;
                border: 2px solid #000;
            }

            .flipFrutto .card .back {
                -webkit-transform: rotateY(-180deg);
                transform: rotateY(-180deg);
                position: absolute;
            }

    flipFrutto .inner {
        margin: 0px !important;
        width: 100%;
    }

    .chiudiSchedaFrutto {
        position: absolute;
        top: 0;
        cursor: pointer;
    }
</style>

<div id="chiudi_@ViewBag.Numero" class="chiudiSchedaFrutto">
    <i class="fa fa-times" style="font-size: 2.5vh;" onclick="nascondiScheda('@ViewBag.Numero')"></i>
</div>

<div id="flipFrutto_@ViewBag.Numero" class="flipFrutto" onclick="flippaScheda('@ViewBag.Numero')">
    <div id="card_@ViewBag.Numero" class="card">
        <div class="face front">
            <div class="inner">
                <img src="~/Images/@ViewBag.Tipo" style="height: 17vh; width: auto;" />
                <div style="width: 100%; font-size: 4vh; font-family: Pirate; text-align: center;">Foco Foco</div>
                <div style="width: 100%; font-size: 1.2vh; text-align: center; font-weight: bold;">
                    <img src="~/Images/frutto.png" style="height: 2.5vh; width: 2.5vh; margin-top: -10px;" />
                    <span style="padding-left: 3px;">FRUTTO DEL DIAVOLO</span>
                </div>
            </div>
        </div>
        <div class="face back" onclick="flippaScheda('@ViewBag.Numero')">
            <div class="inner">

            </div>
        </div>
    </div>
</div>
