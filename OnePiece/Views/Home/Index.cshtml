<script>

    var schedaUno = false;
    var schedaDue = false;
    var schedaTre = false;
    var schedaQuattro = false;
    var ordineApparizione = [];

    function mostraScheda(tipo) {
        var numero = "";
        if (!schedaUno) {
            numero = "uno";
            schedaUno = true;
            ordineApparizione.push(1);
        } else if (!schedaDue) {
            numero = "due";
            schedaDue = true;
            ordineApparizione.push(2);
        } else if (!schedaTre) {
            numero = "tre";
            schedaTre = true;
            ordineApparizione.push(3);
        } else if (!schedaQuattro) {
            numero = "quattro";
            schedaQuattro = true;
            ordineApparizione.push(4);
        }
        console.log(numero);
        if (numero != "") {
            $("#scheda" + numero).hide();
            $("#scheda" + numero).load("../Home/Scheda" + tipo  + "?numero=" + numero);
        } else {
            var apparsoPrima = ordineApparizione[0];
            ordineApparizione.shift();
            switch (apparsoPrima) {
                case 1:
                    numero = "uno";
                    ordineApparizione.push(1);
                    break;
                case 2:
                    numero = "due";
                    ordineApparizione.push(2);
                    break;
                case 3:
                    numero = "tre";
                    ordineApparizione.push(3);
                    break;
                case 4:
                    numero = "quattro";
                    ordineApparizione.push(4);
                    break;
            }

            $("#scheda" + numero).hide();
            $("#scheda" + numero).load("../Home/Scheda" + tipo + "?numero=" + numero);
        }
    }

    function nascondiScheda(numero) {
        var direzione = "";
        var num = 0;
        if (numero == "uno") {
            direzione = "left";
            schedaUno = false;
            num = 1;
        }
        if (numero == "due") {
            direzione = "right";
            schedaDue = false;
            num = 2;
        }
        if (numero == "tre") {
            direzione = "left";
            schedaTre = false;
            num = 3;
        }
        if (numero == "quattro") {
            direzione = "right";
            schedaQuattro = false;
            num = 4;
        }
        var index = ordineApparizione.indexOf(num);
        if (index > -1) {
            ordineApparizione.splice(index, 1);
        }
        $("#scheda" + numero).hide("slide", { direction: direzione }, 800);
    }

    function flippaScheda(numero) {
        $("#card_" + numero).toggleClass('is-flipped');
    }

    function vaiA(id) {
        $("html, body").animate({ scrollTop: $('#contenitore_' + id).offset().top }, 1000);
        $(".testo").hide();
        $(".capitoloScelto").removeClass("capitoloScelto");
        $(".frecciaSu").removeClass("frecciaSu");
        $("#testo_" + id).show();
        $("#capitolo_" + id).addClass("capitoloScelto");
        $("#freccia_" + id).addClass("frecciaSu");
    }
</script>

